rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️ APPLE 심사용 데모 모드 - 심사 완료 후 모든 데모 관련 규칙 제거 필요
    // 제거 가이드: DEMO_MODE_REMOVAL_GUIDE.md 참조
    // 사용자 프로필 문서
    match /users/{userId} {
      // ⚠️ APPLE 심사용 데모 모드 - 심사 완료 후 삭제 필요
      // 데모 사용자 문서는 인증 없이도 접근 허용 (Apple 심사용)
      allow read, write: if userId == 'demo-user-123456789';
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // 다른 사용자의 기본 정보 읽기 허용
      // 휴대전화번호 중복 체크를 위한 쿼리 허용 (인증되지 않은 사용자도 허용)
      allow list: if true;
      // 러닝매너 평가를 통한 communityStats 업데이트 허용
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['communityStats']);
      // 매너거리 시스템 업데이트 허용
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['mannerDistance']);
      // communityStats와 mannerDistance 동시 업데이트 허용
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['communityStats', 'mannerDistance']);
      
      // 블랙리스트 하위 컬렉션
      match /blacklist/{blacklistId} {
        // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
        // 모든 인증된 사용자는 모든 블랙리스트에 접근 가능 (양방향 차단을 위해)
        allow read, write: if request.auth != null;
      }
    }
    
    // 이벤트/모임 문서
    match /events/{eventId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      // 쿼리 레벨 읽기 허용 (where 쿼리 포함)
      allow read, list: if request.auth != null;
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.organizerId ||
         // 데모 계정 허용
         request.resource.data.organizerId == 'demo-user-123456789');
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.organizerId || 
         request.auth.uid in resource.data.participants ||
         request.auth.uid in request.resource.data.participants ||
         // 데모 계정 허용
         resource.data.organizerId == 'demo-user-123456789' ||
         'demo-user-123456789' in resource.data.participants ||
         'demo-user-123456789' in request.resource.data.participants);
    }
    
    // 종료된 이벤트
    match /endedEvents/{eventId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants;
    }
    
    // 커뮤니티 게시글
    match /posts/{postId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      // 쿼리 레벨 읽기 허용 (where 쿼리 포함)
      allow read, list: if request.auth != null;
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.authorId ||
         // 데모 계정 허용 (authorId가 demo-user-123456789인 경우)
         request.resource.data.authorId == 'demo-user-123456789');
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         // 좋아요 관련 필드만 업데이트 허용
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments'])) ||
         // 데모 계정 허용
         resource.data.authorId == 'demo-user-123456789');
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.authorId ||
         // 데모 계정 허용
         resource.data.authorId == 'demo-user-123456789');
      
      // 댓글 하위 컬렉션 (필요시)
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
      
      // 좋아요 하위 컬렉션 (필요시)
      match /likes/{likeId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
      }
    }
    
    // 채팅방
    match /chatRooms/{chatId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      // 쿼리 레벨 읽기 허용 (where 쿼리 포함)
      allow read, list: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.uid in resource.data.participants ||
         request.auth.uid in request.resource.data.participants ||
         request.auth.uid == resource.data.createdBy ||
         // 데모 계정 허용 (participants에 demo-user-123456789가 포함된 경우)
         'demo-user-123456789' in resource.data.participants ||
         'demo-user-123456789' in request.resource.data.participants ||
         resource.data.createdBy == 'demo-user-123456789');
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy ||
         request.auth.uid == resource.data.organizerId ||
         // 데모 계정 허용
         resource.data.createdBy == 'demo-user-123456789' ||
         resource.data.organizerId == 'demo-user-123456789');
    }
    
    // 채팅 메시지
    match /chatRooms/{chatId}/messages/{messageId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      allow read, list: if request.auth != null;
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.senderId ||
         // 시스템 메시지 허용 (채팅방 참여자만)
         (request.resource.data.senderId == 'system' && 
          request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(chatId)).data.participants) ||
         // 데모 계정 허용 (senderId가 demo-user-123456789인 경우)
         request.resource.data.senderId == 'demo-user-123456789');
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.senderId ||
         // 모임 생성자(채팅방 소유자)는 모든 메시지 삭제 가능
         request.auth.uid == get(/databases/$(database)/documents/chatRooms/$(chatId)).data.organizerId ||
         // 데모 계정 허용
         resource.data.senderId == 'demo-user-123456789');
    }
    
    // 알림
    match /notifications/{notificationId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      // 쿼리 레벨 읽기 허용 (where 쿼리 포함)
      allow read, list: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.userId ||
         // 데모 계정 허용 (userId가 demo-user-123456789인 경우)
         resource.data.userId == 'demo-user-123456789');
      allow create: if request.auth != null;
    }
    
    // 모임 알림
    match /meetingNotifications/{notificationId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      // 쿼리 레벨 읽기 허용 (where 쿼리 포함)
      allow read, list: if request.auth != null;
      allow write, update: if request.auth != null && 
        (request.auth.uid == resource.data.targetUserId ||
         // 데모 계정 허용
         resource.data.targetUserId == 'demo-user-123456789');
      allow create: if request.auth != null;
    }
    
    // 평가/리뷰
    match /evaluations/{evaluationId} {
      // 평가 완료 여부 확인을 위해 인증된 사용자는 읽기 가능
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.evaluatorId;
      allow update: if request.auth != null && request.auth.uid == resource.data.evaluatorId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.evaluatorId;
    }
    
    // 사용자 통계
    match /userStats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 커뮤니티 통계
    match /communityStats/{statId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 앱 설정
    match /app_config/{configId} {
      allow read: if request.auth != null;
    }
    
    // 신고 (Reports)
    match /reports/{reportId} {
      // 신고 생성: 모든 인증된 사용자 가능
      // 필수 필드 확인 및 reportedBy가 요청한 사용자와 일치하는지 확인
      allow create: if request.auth != null && 
        request.resource.data.reportedBy is string &&
        request.auth.uid == request.resource.data.reportedBy &&
        request.resource.data.contentType is string &&
        request.resource.data.contentId is string &&
        request.resource.data.reason is string &&
        request.resource.data.status is string;
      // 신고 읽기: 신고한 사용자만 가능
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.reportedBy;
      // 신고 업데이트: 신고한 사용자만 가능 (상태 업데이트는 관리자만 가능하도록 추후 구현)
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.reportedBy;
      // 신고 삭제: 신고한 사용자만 가능
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.reportedBy;
    }
    
    // 러닝카페 (cafes)
    match /cafes/{cafeId} {
      // ⚠️ APPLE 심사용 데모 모드 - 데모 계정 접근 허용
      // 쿼리 레벨 읽기 허용 (where 쿼리 포함)
      allow read, list: if request.auth != null;
      // 카페 생성은 관리자만 가능 (추후 구현)
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
  }
} 